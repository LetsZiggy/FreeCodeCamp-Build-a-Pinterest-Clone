template
  #add-pin-content
    #add-pin-background(click.delegate="closeAddPin()")
    #add-pin-close-button(click.delegate="closeAddPin()")
      img(src="https://material.io/tools/icons/static/icons/baseline-close-24px.svg")

    #add-pin-container
      #add-pin-image-display
        img#add-pin-image-element(error.trigger="imageError('error')")
      form#add-pin-form(submit.delegate="addPin()")
        label
          span Image Source (HTTP Link)
          input#add-pin-image-input(type="text" value.bind="image" placeholder="eg: http://via.placeholder.com/250x250")
        label
          span Pin Title
          input#add-pin-title-input(type="text" value.bind="title" placeholder="eg: This is a placeholder image" keydown.delegate="checkInput($event)")
        #add-pin-buttons
          input#add-pin-submit(type="submit" value="Add Pin" disabled.bind="error || !image.length || !title.length")
          //- input#add-pin-reset(type="reset" value="Reset")